<Window x:Class="BankManagementProject.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManagementProject"
        mc:Ignorable="d"
        Title="DepositWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Account Number:" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="AccountNumberTextBox" Margin="10,30,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Deposit Amount:" Margin="10,70,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DepositAmountTextBox" Margin="10,90,10,0" VerticalAlignment="Top"/>

        <Button Content="Deposit" Margin="10,130,10,0" VerticalAlignment="Top" Click="DepositButton_Click"/>
    </Grid>
</Window>
